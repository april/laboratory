{
  "manifest_version": 2,
  "name": "Laboratory by Mozilla",
  "version": "1.0",

  "description": "Because good website security shouldn't only be available to mad scientists!",

  "background": {
    "scripts": ["js/localforage.min.js", "js/laboratory.js"]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": "img/vial.svg",
    "default_title": "Laboratory by Mozilla",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage", "tabs", "webNavigation", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"
  ]
}