{
  "manifest_version": 2,
  "name": "Laboratory",
  "short_name": "Laboratory",
  "version": "2.1.2",

  "description": "Because good website security shouldn't only be available to mad scientists!",
  "homepage_url": "https://github.com/april/laboratory",
  "developer": {
    "name": "April King",
    "url": "https://github.com/april/laboratory"
  },

  "icons": {
    "48": "img/vial.svg",
    "96": "img/vial.svg"
  },

  "applications": {
    "gecko": {
      "id": "1b2383b324c8520974ee097e46301d5ca4e076de387c02886f1c6b1503671586@pokeinthe.io",
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": ["js/localforage-1.5.0.min.js", "js/laboratory.js"]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": "img/vial.svg",
    "default_title": "Laboratory by Mozilla",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "ftp://*/*",
    "http://*/*",
    "https://*/*"
  ]
}
